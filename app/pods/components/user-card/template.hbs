<div class="userCard-section _text">
  <div class="userCard-section-text-name">
    {{link-to (concat user.firstName " " user.lastName) "authenticated.friends.friend" user.id class="userCard-section-text-name-link"}}
  </div>
  <div class="userCard-section-text-status">
    {{user.onlineStatusText}}
    {{#if user.lastSeenPlatform}}
      {{last-seen-platform user=user}}
    {{/if}}
  </div>
</div>

{{#link-to "authenticated.friends.friend" user.id class="userCard-section _image"}}
  <img src="{{user.photo_100}}" alt="">
{{/link-to}}